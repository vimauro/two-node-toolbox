{
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(jq:*)",
      "Bash(yq:*)",

      "Bash(git log:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git show:*)",
      "Bash(git branch:*)",

      "Bash(ansible cluster_vms -i * -m ping)",
      "Bash(ansible cluster_vms -i * -m setup)",
      "Bash(ansible *_master_* -i * -m shell -a 'cat *')",
      "Bash(ansible *_master_* -i * -m shell -a 'grep *')",
      "Bash(ansible *_master_* -i * -m shell -a 'tail *')",
