      "Bash(ansible *_master_* -i * -m shell -a 'podman ps*')",
      "Bash(ansible *_master_* -i * -m shell -a 'podman exec etcd etcdctl member list*')",
      "Bash(ansible *_master_* -i * -m shell -a 'podman exec etcd etcdctl endpoint health*')",
      "Bash(ansible *_master_* -i * -m shell -a 'podman exec etcd etcdctl endpoint status*')",
      "Bash(ansible *_master_* -i * -m shell -a 'crm_attribute --query*')",
      "Bash(ansible *_master_* -i * -m shell -a 'journalctl*')",
      "Bash(ansible *_master_* -i * -m shell -a 'systemctl status*')",

      "Bash(source deploy/openshift-clusters/proxy.env && oc get*)",
      "Bash(source deploy/openshift-clusters/proxy.env && oc describe*)",
      "Bash(source deploy/openshift-clusters/proxy.env && oc logs*)",

      "Bash(helpers/etcd/validate-cluster-access.sh)",

      "Read(/tmp/etcd-diagnostics-*/**)",
      "Read(/tmp/ansible-validation.log)"
    ],
    "deny": []
  }
}
